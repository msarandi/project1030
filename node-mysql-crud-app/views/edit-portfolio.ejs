<%- include ('./partials/header.ejs') %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (portfolio) { %>
        <form class="add-portfolio-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="Title">Title</label>
                    <input type="text" class="form-control" name="Title" id="Title" value="<%= portfolio.title %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" name="description" id="description" value="<%= portfolio.title %>" required>
                </div>
                
            </div>
            <button type="submit" class="btn btn-success float-right">Update Portfolio</button>
        </form>
    <% } else { %>
        <p class="text-center">Portfolio Submission Not Found. Go <a href="/add">here</a> to add to Portfolio.</p>
    <% } %>
</div>
</div>
</body>
</html>