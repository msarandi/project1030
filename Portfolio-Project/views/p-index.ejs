<%- include ('./partials/header.ejs') %>
    <div class="table-wrapper">
        <% if (portfolios.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% portfolios.forEach((portfolio, index) => { %>
                        <tr>
                            <th scope="row"><%= portfolio.id %></th>
                            <td><%= portfolio.title %></td>
                            <td><%= portfolio.description%></td>

                            <td>
                                <a href="/editportfolio/<%= portfolio.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/deleteportfolio/<%= portfolio.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No portfolio found. Go <a href="/addportfolio" >here</a> to add portfolio.</p>
        <% } %>
    </div>
</div>
</body>
</html>