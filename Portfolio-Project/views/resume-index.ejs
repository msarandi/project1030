<!-- Show Resume Submissions -->
    
    <%- include ('./partials/header.ejs') %>
    <div class="table-wrapper">
        <h2>Resume Submissions:</h2>
        <% if (resumes.length > 0) {%>
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Month</th>
                        <th scope="col">Year</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% resumes.forEach((resume, index) => { %>
                        <tr>
                            <th scope="row"><%= resume.id %></th>
                            <td><%= resume.month %></td>
                            <td><%= resume.year %></td>
                            <td><%= resume.title %></td>
                            <td><%= resume.description%></td>
                           
                <!-- Update and Delete Resume Submissions -->
                            <td>
                                <a href="/editresume/<%= resume.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-light">Edit</a>
                                <a href="/deleteresume/<%= resume.id %>" class="btn btn-sm btn-light">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No resume found. Go <a href="/addresume" >here</a> to add resume.</p>
        <% } %>
    </div>
</div>
</body>
</html>